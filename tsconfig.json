{
    "compilerOptions": {
      "listEmittedFiles": false,
      "declaration": true,
      "declarationDir": "definitions",
      "module": "es2015",
      "target": "es6",
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "noImplicitThis": true,
      "removeComments": false,
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "pretty": true,
      "jsx": "react",
      "allowJs": false,
      "lib": [
        "es2016",
        "dom"
      ]
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "./node_modules/**/*"
    ]
}